<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="10"
    xmlns:lyft="http://schemas.android.com/apk/res-auto"
    tools:context="pkali.transportationapp.Price.PriceSortActivity">

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_button_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        lyft:lyftStyle="lyftMulberryDark" />

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_button_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        lyft:lyftStyle="lyftMulberryDark" />

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        lyft:lyftStyle="lyftMulberryDark" />


</GridLayout>
